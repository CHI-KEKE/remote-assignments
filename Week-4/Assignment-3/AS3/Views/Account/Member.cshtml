@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Welcome! Little Member!";
}

<!DOCTYPE html>
<html>
<head>
    <title>Member Page</title>
</head>
<body>
    <h2 class="mt-5">Member Page</h2>

    <div class="card mb-3 mx-auto" style="max-width: 25rem;">
        <h3 class="card-header">@ViewBag.WelcomeMessage</h3>
        <div class="card-body">
            <h5 class="card-title">Walter Elliot</h5>
            <h6 class="card-subtitle text-muted">8 January 1958</h6>
        </div>
        <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            <rect width="100%" height="100%" fill="#868e96"></rect>
            <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
        </svg>

        <div class="card-body">
            <p class="card-text">
                “Perseverance is not a long race; it is many short races one after the other.”
            </p>
        </div>
       
        <div class="card-body">
            <a class="btn btn-warning" asp-controller="Account" asp-action="Logout">Logout</a>
        </div>
        <div class="card-footer text-muted">
            @DateTime.Now.ToString("yyyy/MM/dd HH:mm")
        </div>
    </div>

</body>
</html>

